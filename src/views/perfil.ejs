<div class="max-w-4xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">

  <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-6 mb-6 space-y-4 md:space-y-0">
    
    <form id="formFotoUsuario" action="/users/update-photo" method="POST" enctype="multipart/form-data">
      <label for="fotoInputUsuario" class="cursor-pointer">
        <img src="<%= users.foto || '/uploads/default.png' %>"
             alt="Foto de perfil" 
             class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full border-4 border-blue-500 shadow 
                    hover:opacity-80 transition object-cover">
      </label>
      <input type="file" id="fotoInputUsuario" name="foto" accept="image/*" 
             class="hidden" onchange="document.getElementById('formFotoUsuario').submit()" />
    </form>

    <div class="text-center md:text-left">
      <h2 class="text-2xl font-bold text-gray-800"><%= users.nombre %></h2>
      <p class="text-gray-600"><%= users.correo %></p>
      <span class="inline-block mt-2 px-3 py-1 text-sm rounded-full 
                   bg-blue-100 text-blue-700 font-semibold uppercase">
        <%= (users.rol_id == 1) ? 'Administrador' : (users.rol_id == 2) ? 'Docente' : 'Estudiante' %>
      </span>
    </div> 
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
    <div class="bg-gray-50 p-4 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-2">Datos de Identidad</h3>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Cédula:</strong> <%= users.cedula %></li>
        <li><strong>Correo:</strong> <%= users.correo %></li>
        <li>
          <strong>Nacionalidad:</strong> 
          <%= users.pais == 1 ? 'Venezolano' : 'Extranjero' %>
        </li>
        <li><strong>Fecha Registro:</strong> <%= new Date(users.created_at).toLocaleDateString() %></li>
      </ul>
    </div>

    <div class="bg-gray-50 p-6 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-4">Seguridad</h3>
      <form action="/users/update-password" method="POST" class="space-y-4">
        
        <div class="relative">
          <label for="claveActual" class="block text-sm font-semibold">Contraseña actual</label>
          <div class="relative">
            <input type="password" id="claveActual" name="claveActual" 
                   class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
            <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="claveActual">
              <i class="bi bi-eye text-gray-500"></i>
            </button>
          </div>
        </div>

        <div class="relative">
          <label for="nuevaClave" class="block text-sm font-semibold">Nueva contraseña</label>
          <div class="relative">
            <input type="password" id="nuevaClave" name="clave" 
                   class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
            <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="nuevaClave">
              <i class="bi bi-eye text-gray-500"></i>
            </button>
          </div>
        </div>

        <div class="relative">
          <label for="confirmarClave" class="block text-sm font-semibold">Confirmar nueva contraseña</label>
          <div class="relative">
            <input type="password" id="confirmarClave" name="confirmarClave" 
                   class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
            <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="confirmarClave">
              <i class="bi bi-eye text-gray-500"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors w-full font-bold">
          Actualizar Credenciales
        </button>
      </form>
    </div>
  </div>
</div>

<script src="/js/perfil.js"></script>