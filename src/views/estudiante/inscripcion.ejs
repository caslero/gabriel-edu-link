<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold mb-4 text-blue-700">Formulario de Inscripción</h2>

  <form id="formInscripcion" class="bg-white p-6 rounded shadow space-y-4">
    
    <input type="hidden" name="usuario_id" id="" value="<%= user ? user.id : '' %>">

    <div>
      <label for="semestre" class="block font-semibold text-gray-700">Semestre</label>
      <select id="semestre" name="semestre" class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 outline-none" required>
        <option value="">Cargando semestres...</option>
      </select>
    </div>

    <div>
      <label for="materia_id" class="block font-semibold text-gray-700">Materia</label>
      <select id="materia_id" name="materia_id" class="w-full border p-2 rounded disabled:bg-gray-100 focus:ring-2 focus:ring-blue-500 outline-none" disabled required>
        <option value="">Seleccione un semestre primero</option>
      </select>
    </div>

    <div>
      <label for="seccion_id" class="block font-semibold text-gray-700">Sección</label>
      <select id="seccion_id" name="seccion_id" class="w-full border p-2 rounded disabled:bg-gray-100 focus:ring-2 focus:ring-blue-500 outline-none" disabled required>
        <option value="">Seleccione una materia primero</option>
      </select>
    </div>

    <button type="submit" class="bg-blue-700 text-white px-6 py-2 rounded font-bold hover:bg-gradient-to-r from-blue-600 to-blue-400 transition-all duration-300 shadow-md active:scale-95">
      Enviar solicitud
    </button>
  </form>



  <h3 class="text-lg font-semibold text-blue-700 mt-8 mb-4">Mis solicitudes</h3>
  
  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-3 text-left">Materia</th>
          <th class="px-4 py-3 text-center">Sección</th>
          <th class="px-4 py-3 text-center">Estado</th>
          <th class="px-4 py-3 text-center">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        <% if (!solicitudes || solicitudes.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center py-8 text-gray-500 italic">No has enviado solicitudes.</td>
          </tr>
        <% } else { %>
          <% solicitudes.forEach(sol => { %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-4 py-3 font-medium text-gray-800"><%= sol.materia %></td>
              <td class="px-4 py-3 text-center">
                <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded text-xs font-mono border">
                  <%= sol.seccion %>
                </span>
              </td>
              <td class="px-4 py-3 text-center">
                <% if (sol.estado === 'Pendiente') { %>
                  <span class="bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full text-xs font-bold uppercase">En proceso</span>
                <% } else if (sol.estado === 'Rechazada') { %>
                  <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-bold uppercase">Rechazada</span>
                <% } else if (sol.estado === 'Aprobada') { %>
                  <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-bold uppercase">Aprobada</span>
                <% } %>
              </td>
              <td class="px-4 py-3 text-center">
                <button 
                  type="button" 
                  onclick="toggleModal('detalle-solicitud-<%= sol.id %>', true)" 
                  class="text-blue-600 hover:text-blue-800 font-bold text-sm hover:underline decoration-2 underline-offset-4 transition-all">
                  Ver detalles
                </button>
              </td>
            </tr>

            <div id="detalle-solicitud-<%= sol.id %>" 
                 class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-60 z-50 p-4 backdrop-blur-sm">
              <div class="bg-white rounded-xl shadow-2xl p-6 w-full max-w-md transform transition-all border-t-4 border-blue-600">
                <div class="flex justify-between items-center border-b pb-3 mb-4">
                  <h3 class="text-lg font-bold text-blue-700">Solicitud #<%= sol.id %></h3>
                  <button onclick="toggleModal('detalle-solicitud-<%= sol.id %>', false)" class="text-gray-400 hover:text-gray-800 text-2xl font-light">&times;</button>
                </div>
                
                <div class="space-y-4">
                  <div class="flex justify-between border-b border-gray-50 pb-2">
                    <span class="font-bold text-gray-500 text-sm">MATERIA</span>
                    <span class="text-gray-800 font-semibold"><%= sol.materia %></span>
                  </div>
                  <div class="flex justify-between border-b border-gray-50 pb-2">
                    <span class="font-bold text-gray-500 text-sm">SECCIÓN</span>
                    <span class="text-gray-800 font-semibold"><%= sol.seccion %></span>
                  </div>
                  <div class="flex justify-between border-b border-gray-50 pb-2">
                    <span class="font-bold text-gray-500 text-sm">ESTADO</span>
                    <span class="font-bold uppercase text-xs"><%= sol.estado %></span>
                  </div>
                  
                  <div class="bg-blue-50 p-4 rounded-lg border border-blue-100 mt-4">
                    <p class="font-bold text-blue-800 text-xs mb-2 uppercase tracking-widest">Respuesta de Administración:</p>
                    <p class="text-gray-600 italic text-sm leading-relaxed">
                      "<%= sol.comentario ? sol.comentario : 'Tu solicitud está siendo revisada. Por favor, espera a que un administrador gestione tu cupo.' %>"
                    </p>
                  </div>
                </div>

                <button type="button" 
                        onclick="toggleModal('detalle-solicitud-<%= sol.id %>', false)" 
                        class="bg-blue-700 text-white px-4 py-3 rounded-lg hover:bg-blue-800 w-full mt-6 shadow-lg font-bold transition-all active:scale-95">
                  Cerrar Ventana
                </button>
              </div>
            </div>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script src="/js/solicitudInscripciones.js" defer></script>