<div class="max-w-4xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">

  <!-- Contenedor adaptable -->
  <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-6 mb-6 space-y-4 md:space-y-0">
    <!-- Imagen de perfil clickable -->
    <form id="formFotoAdmin" enctype="multipart/form-data">
      <label for="fotoInputAdmin" class="cursor-pointer">
        <img src="<%= users.foto || '/uploads/default.png' %>"
             alt="Foto de perfil administrador" 
             class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full border-4 border-blue-500 shadow 
                    hover:opacity-80 transition object-cover">
      </label>
      <!-- Input oculto -->
      <input type="file" id="fotoInputAdmin" name="foto" accept="image/*" 
             class="hidden" onchange="document.getElementById('formFotoAdmin').submit()" />
    </form>

    <!-- Datos del administrador -->
    <div class="text-center md:text-left">
      <h2 class="text-2xl font-bold text-gray-800"><%= users.nombre %></h2>
      <p class="text-gray-600"><%= users.correo %></p>
      <span class="inline-block mt-2 px-3 py-1 text-sm rounded-full 
                   bg-blue-100 text-blue-700 font-semibold">
        Rol: <%= users.rol_id %>
      </span>
    </div> 
  </div>

  <!-- Información adicional -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Datos personales -->
    <div class="bg-gray-50 p-4 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-2">Datos Personales</h3>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Nombre:</strong> <%= users.nombre %></li>
        <li><strong>Correo:</strong> <%= users.correo %></li>
        <li><strong>Rol:</strong> <%= users.rol_id %></li>
      </ul>
    </div>

    <!-- Cambiar contraseña -->
    <div class="bg-gray-50 p-6 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-4">Cambiar contraseña</h3>
      <form class="space-y-4">
        <div>
          <label for="claveActualAdmin" class="block font-semibold">Contraseña actual</label>
          <input type="password" id="claveActualAdmin" name="claveActual" 
                 class="w-full border p-2 rounded" required />
        </div>
        <div>
          <label for="nuevaClaveAdmin" class="block font-semibold">Nueva contraseña</label>
          <input type="password" id="nuevaClaveAdmin" name="nuevaClave" 
                 class="w-full border p-2 rounded" required />
        </div>
        <div>
          <label for="confirmarClaveAdmin" class="block font-semibold">Confirmar nueva contraseña</label>
          <input type="password" id="confirmarClaveAdmin" name="confirmarClave" 
                 class="w-full border p-2 rounded" required />
        </div>
        <button type="submit" 
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-gradient-to-r from-cyan-200 to-blue-500 to-blue-700 w-full">
          Guardar nueva contraseña
        </button>
      </form>
    </div>
  </div>
</div>