<div class="max-w-4xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">

  <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-6 mb-6 space-y-4 md:space-y-0">
    
    <form id="formFotoAdmin" enctype="multipart/form-data">
      <label for="fotoInputAdmin" class="cursor-pointer">
        <img src="<%= users.foto || '/uploads/default.png' %>"
             alt="Foto de perfil" 
             class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 rounded-full border-4 border-blue-500 shadow 
                    hover:opacity-80 transition object-cover">
      </label>
      <input type="file" id="fotoInputAdmin" name="foto" accept="image/*" 
             class="hidden" onchange="document.getElementById('formFotoAdmin').submit()" />
    </form>

    <div class="text-center md:text-left">
      <h2 class="text-2xl font-bold text-gray-800"><%= users.nombre %></h2>
      <p class="text-gray-600"><%= users.correo %></p>
      <span class="inline-block mt-2 px-3 py-1 text-sm rounded-full 
                   bg-blue-100 text-blue-700 font-semibold">
        ID Rol: <%= users.rol_id %>
      </span>
    </div> 
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    
    <div class="bg-gray-50 p-4 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-2">Datos de Identidad</h3>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Cédula:</strong> <%= users.cedula %></li>
        <li><strong>Correo:</strong> <%= users.correo %></li>
        <li>
          <strong>Nacionalidad:</strong> 
          <%= users.pais == 1 ? 'Venezolano' : 'Extranjero' %>
        </li>
        <li><strong>Fecha Registro:</strong> <%= new Date(users.created_at).toLocaleDateString() %></li>
      </ul>
    </div>

    <div class="bg-gray-50 p-6 rounded shadow-sm">
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Seguridad</h3>
  <form action="/users/update-password" method="POST" class="space-y-4">
    
    <div class="relative">
      <label for="claveActualAdmin" class="block text-sm font-semibold">Contraseña actual</label>
      <div class="relative">
        <input type="password" id="claveActualAdmin" name="claveActual" 
               class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
        <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="claveActualAdmin">
          <svg class="eye-open h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <svg class="eye-closed h-5 w-5 text-gray-500 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l18 18" />
          </svg>
        </button>
      </div>
    </div>

    <div class="relative">
      <label for="nuevaClaveAdmin" class="block text-sm font-semibold">Nueva contraseña</label>
      <div class="relative">
        <input type="password" id="nuevaClaveAdmin" name="clave" 
               class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
        <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="nuevaClaveAdmin">
          <svg class="eye-open h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <svg class="eye-closed h-5 w-5 text-gray-500 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l18 18" />
          </svg>
        </button>
      </div>
    </div>

    <div class="relative">
      <label for="confirmarClaveAdmin" class="block text-sm font-semibold">Confirmar nueva contraseña</label>
      <div class="relative">
        <input type="password" id="confirmarClaveAdmin" name="confirmarClave" 
               class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-500 pr-10" required />
        <button type="button" class="toggle-password absolute inset-y-0 right-0 pr-3 flex items-center" data-target="confirmarClaveAdmin">
          <svg class="eye-open h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          <svg class="eye-closed h-5 w-5 text-gray-500 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l18 18" />
          </svg>
        </button>
      </div>
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors w-full font-bold">
      Actualizar Credenciales
    </button>
  </form>
</div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    // --- 1. Manejo de Foto de Perfil ---
    const formFoto = document.getElementById('formFotoAdmin');
    const inputFoto = document.getElementById('fotoInputAdmin');
    const imgPerfil = formFoto.querySelector('img');

    inputFoto.addEventListener('change', async (e) => {
        const file = e.target.files[0];
        if (!file) return;

        // Previsualización inmediata para el usuario
        const reader = new FileReader();
        reader.onload = (e) => imgPerfil.src = e.target.result;
        reader.readAsDataURL(file);

        // Envío automático al servidor vía AJAX/Fetch
        const formData = new FormData();
        formData.append('foto', file);

        try {
            const response = await fetch('/users/update-photo', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();
            if (result.success) {
                alert('¡Foto de perfil actualizada!');
            } else {
                alert('Error al subir la foto: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Hubo un error en la conexión.');
        }
    });

    // --- 2. Validación y Cambio de Contraseña ---
    const formClave = document.querySelector('form[action="/users/update-password"]');
    
    formClave.addEventListener('submit', async (e) => {
        e.preventDefault(); // Detenemos el envío tradicional

        const claveActual = document.getElementById('claveActualAdmin').value;
        const nuevaClave = document.getElementById('nuevaClaveAdmin').value;
        const confirmarClave = document.getElementById('confirmarClaveAdmin').value;

        // Validaciones básicas de Front-end
        if (nuevaClave.length < 6) {
            return alert('La nueva contraseña debe tener al menos 6 caracteres.');
        }

        if (nuevaClave !== confirmarClave) {
            return alert('Las nuevas contraseñas no coinciden.');
        }

        // Envío de datos al servidor
        try {
            const response = await fetch('/users/update-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    claveActual,
                    clave: nuevaClave 
                })
            });

            const result = await response.json();

            if (response.ok) {
                alert('Contraseña actualizada correctamente.');
                formClave.reset(); // Limpia los campos
            } else {
                alert('Error: ' + (result.message || 'No se pudo actualizar.'));
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error al conectar con el servidor.');
        }
    });
    // --- 3. Lógica Ver/Ocultar Clave ---
    const toggleButtons = document.querySelectorAll('.toggle-password');
    
    toggleButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const targetId = btn.getAttribute('data-target');
            const input = document.getElementById(targetId);
            const eyeOpen = btn.querySelector('.eye-open');
            const eyeClosed = btn.querySelector('.eye-closed');

            if (input.type === 'password') {
                input.type = 'text';
                eyeOpen.classList.add('hidden');
                eyeClosed.classList.remove('hidden');
            } else {
                input.type = 'password';
                eyeOpen.classList.remove('hidden');
                eyeClosed.classList.add('hidden');
            }
        });
    });
});
</script>