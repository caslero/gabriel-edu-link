<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6">Gestión de Usuarios</h2>

  <!-- Formulario de creación de usuario -->
  <div class="bg-gray-50 p-6 rounded shadow mb-8">
    <h3 class="text-lg font-semibold text-blue-700 mb-4">
      Crear nuevo usuario
    </h3>
    <form
      action="/api/admin/crear-usuario"
      method="POST"
      class="grid grid-cols-1 md:grid-cols-2 gap-4"
    >
      <div>
        <label for="nombre" class="block font-semibold">Nombre</label>
        <input
          type="text"
          id="nombre"
          name="nombre"
          class="w-full border p-2 rounded"
          placeholder="Gabriel Bolivar"
          required
        />
      </div>
      <div>
        <label for="correo" class="block font-semibold">Correo</label>
        <input
          type="email"
          id="correo"
          name="correo"
          class="w-full border p-2 rounded"
          placeholder="ejemplo@ejemplo.com"
          required
        />
      </div>
      <div>
        <label for="cedula" class="block text-sm font-medium text-gray-700"
          >Nro de Cédula</label
        >
        <div class="mt-1 flex rounded-md shadow-sm">
          <select
            name="pais"
            id="pais"
            class="inline-flex items-center px-3 rounded-l-md border border-gray-300 bg-gray-50 text-gray-700 text-sm focus:outline-none"
          >
            <option value="V">V-</option>
            <option value="E">E-</option>
          </select>
          <input
            type="text"
            id="cedula"
            name="cedula"
            placeholder="28051690"
            required
            class="w-full border p-2 rounded"
          />
        </div>
      </div>
      <div id="todos-roles">
        
      </div>
      <div class="md:col-span-2">
        <label for="clave" class="block font-semibold">Contraseña</label>
        <input
          type="password"
          id="clave"
          name="clave"
          class="w-full border p-2 rounded"
          placeholder="*********"
          required
        />
      </div>
      <div class="md:col-span-2">
        <button
          type="submit"
          class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-gradient-to-r from-cyan-200 to-blue-500 to-blue-700 transition w-full"
        >
          Crear usuario
        </button>
      </div>
    </form>
  </div>

  <!-- Lista de usuarios -->
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Usuarios registrados</h3>
  <div class="overflow-x-auto">
    <table id="tabla-usuarios" class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-2 text-left">ID Usuario</th>
          <th class="px-4 py-2 text-left">Nombre</th>
          <th class="px-4 py-2 text-left">Correo</th>
          <th class="px-4 py-2 text-left">Rol</th>
          <th class="px-4 py-2 text-left">Foto</th>
          <th class="px-4 py-2 text-center">Acciones</th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">
        
        <% if (!usuarios || usuarios.length === 0) { %>
          <tr>
            <td colspan="6" class="text-center py-6 text-gray-500">
              No hay usuarios registrados.
            </td>
          </tr>
        <% } else { %>
          
           
            
            <div id="modal-<%= usuario.id %>" 
                 class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
              <div class="bg-white rounded-lg shadow-lg p-6 w-96">
                <h3 class="text-lg font-semibold text-blue-700 mb-4">Editar Usuario</h3>
                <form action="/api/admin/usuarios/<%= usuario.id %>/editar" method="POST" class="space-y-3">
                  <div>
                    <label class="block text-sm font-semibold">Nombre</label>
                    <input type="text" name="nombre" value="<%= usuario.nombre %>" 
                           class="w-full border p-2 rounded" required>
                  </div>
                  <div>
                    <label class="block text-sm font-semibold">Correo</label>
                    <input type="email" name="correo" value="<%= usuario.correo %>" 
                           class="w-full border p-2 rounded" required>
                  </div>
                  <div>
                    <label class="block text-sm font-semibold">Rol</label>
                    <select name="rol" class="w-full border p-2 rounded">
                      <option value="Estudiante" <%= usuario.rol === 'Estudiante' ? 'selected' : '' %>>Estudiante</option>
                      <option value="Docente" <%= usuario.rol === 'Docente' ? 'selected' : '' %>>Docente</option>
                      <option value="Admin" <%= usuario.rol === 'Admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                  </div>
                  <div class="flex justify-center mt-3 space-x-2">
                    <button type="button" 
                            onclick="document.getElementById('modal-<%= usuario.id %>').classList.add('hidden')" 
                            class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 transition">
                      Cancelar
                    </button>
                    <button type="submit" 
                            class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
                      Guardar
                    </button>
                  </div>
                </form>
              </div>
            </div>

        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script>
  async function cargarUsuarios() {
    try {
      const response = await fetch("/api/usuarios/todos-usuarios", {
        method: "GET",
        headers: {
          "Content-Type": "application/json"
        }
      });

      const datos = await response.json();

      if (datos.status === "error") throw new Error('Error al obtener usuarios');      

      const tbody = document.querySelector('#tabla-usuarios tbody');
      tbody.innerHTML = '';

       if (!datos.usuarios || datos.usuarios.length === 0) {
         tbody.innerHTML = `
           <tr>
             <td colspan="6" class="text-center py-6 text-gray-500">
               No hay usuarios registrados.
             </td>
           </tr>`;
         return;
       }

       datos.usuarios.map(usuario => {
         const fila = document.createElement('tr');
         fila.innerHTML = `
           <td class="px-4 py-2">${usuario.id}</td>
           <td class="px-4 py-2">${usuario.nombre}</td>
           <td class="px-4 py-2">${usuario.correo}</td>
           <td class="px-4 py-2">${usuario.rol_id}</td>
           <td class="px-4 py-2">
             <img src="${usuario.foto || '/img/usuario.png'}" 
                  alt="Foto usuario" 
                  class="w-10 h-10 rounded-full border">
           </td>
           <td class="px-4 py-2 text-center space-x-2">
             <form action="/api/admin/usuarios/${usuario.id}/eliminar" method="POST" class="inline">
               <button type="submit" 
                       class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700 transition"
                       onclick="return confirm('¿Seguro que deseas eliminar este usuario?')">
                 Eliminar
               </button>
             </form>
           </td>
         `;
         tbody.appendChild(fila);
       });
    } catch (error) {
      console.error('Error al refrescar usuarios:', error);
    }
  }

  async function cargarRoles() {
    try {
      const response = await fetch("/api/roles/todos-roles", {
        method: "GET",
        headers: {
          "Content-Type": "application/json"
        }
      });

      const datos = await response.json();

      if (datos.status === "error") throw new Error('Error al obtener usuarios');  

      // Suponiendo que datos.roles es un array de objetos con { nombre: "Estudiante" } etc.
      const contenedor = document.getElementById("todos-roles");

      contenedor.innerHTML = `
        <label for="rol" class="block font-semibold">Rol</label>
        <select id="rol" name="rol" class="w-full border p-2 rounded capitalize" required>
          <option value="">Seleccione</option>
          ${datos.roles.map(rol => `
            <option value="${rol.id}">${rol.nombre}</option>
          `).join('')}
        </select>
      `;
      
    } catch(error) {
      console.log("Error al obtener los roles:", error);
      
    }
  }

  // refrescar cada 10 segundos
  //setInterval(cargarUsuarios, 10000);

  // cargar al inicio
  cargarUsuarios();
  cargarRoles();
</script>