<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6">Gestión de Inscripciones</h2>

  <div class="bg-gray-50 p-6 rounded shadow mb-8">
    <h3 class="text-lg font-semibold text-blue-700 mb-4">Registrar nueva inscripción (Manual)</h3>
    
    <form class="grid grid-cols-1 md:grid-cols-2 gap-4">
      
      <div class="md:col-span-2">
        <label for="buscarCedula" class="block font-semibold text-gray-700">Buscar estudiante por cédula</label>
        <div class="flex mb-2 rounded overflow-hidden border focus-within:ring-2 focus-within:ring-blue-500">
          <select id="prefijoCedula" class="border-none px-3 py-2 bg-gray-100 focus:outline-none">
            <option value="1">V-</option>
            <option value="0">E-</option>
          </select>
          <input type="text" id="buscarCedula" placeholder="Ej: 12345678" class="flex-1 px-3 py-2 focus:outline-none">
          <button type="button" id="btnBuscarCedula" class="bg-blue-600 text-white px-4 flex items-center justify-center hover:bg-blue-700 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1110.5 3a7.5 7.5 0 016.15 13.65z" />
            </svg>
          </button>
        </div>
      </div>

      <div>
        <label for="estudiante_id" class="block font-semibold text-gray-700">Estudiante seleccionado</label>
        <select id="estudiante_id" name="estudiante_id" class="w-full border p-2 rounded bg-gray-100" required disabled>
          <option value="">Realice una búsqueda...</option>
        </select>
      </div>

      <div>
        <label for="semestre_id" class="block font-semibold text-gray-700">Semestre</label>
        <select id="semestre_id" name="semestre_id" class="w-full border p-2 rounded" required disabled>
          <option value="">Selecciona el Semestre</option>
          <% semestres.forEach(sem => { %>
            <option value="<%= sem.semestre %>">Semestre <%= sem.semestre %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="materia_id" class="block font-semibold text-gray-700">Materia</label>
        <select id="materia_id" name="materia_id" class="w-full border p-2 rounded" required disabled>
          <option value="">Selecciona la Materia</option>
        </select>
      </div>

      <div>
        <label for="seccion_id" class="block font-semibold text-gray-700">Sección</label>
        <select id="seccion_id" name="seccion_id" class="w-full border p-2 rounded" required disabled>
          <option value="">Selecciona la Sección</option>
        </select>
      </div>

      <div class="md:col-span-2">
        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded font-bold hover:bg-blue-700 transition">
          Registrar Inscripción Final
        </button>
      </div>
    </form>
  </div>

  <h3 class="text-lg font-semibold text-blue-700 mb-4">Solicitudes de inscripción (Pendientes)</h3>
  <div class="overflow-x-auto mb-8">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-yellow-600 text-white text-sm">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2 text-left">Estudiante</th>
          <th class="px-4 py-2">Materia</th>
          <th class="px-4 py-2">Sección</th>
          <th class="px-4 py-2">Fecha</th>
          <th class="px-4 py-2">Estado</th>
          <th class="px-4 py-2">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if (!solicitudes || solicitudes.length === 0) { %>
          <tr><td colspan="7" class="text-center py-6 text-gray-500">No hay solicitudes pendientes.</td></tr>
        <% } else { %>
          <% solicitudes.forEach(sol => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-4 py-2 text-center text-xs text-gray-500">#<%= sol.id %></td>
              <td class="px-4 py-2 font-medium"><%= sol.estudiante_nombre %> <br><small class="text-gray-400"><%= sol.id_usuario %></small></td>
              <td class="px-4 py-2 text-center"><%= sol.materia %></td>
              <td class="px-4 py-2 text-center"><%= sol.seccion %></td>
              <td class="px-4 py-2 text-center text-xs"><%= sol.creado_en %></td>
              <td class="px-4 py-2 text-center">
                <span class="px-2 py-1 rounded-full text-xs font-bold 
                  <%= sol.estado === 'Pendiente' ? 'bg-yellow-100 text-yellow-700' : 
                      sol.estado === 'Aprobada' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                  <%= sol.estado %>
                </span>
              </td>
              <td class="px-4 py-2 text-center">
                <button type="button" onclick="toggleModal('modal-<%= sol.id %>', true)" 
                        class="bg-blue-500 text-white px-3 py-1 rounded text-sm hover:bg-blue-600">
                  Gestionar
                </button>
              </td>
            </tr>

            <div id="modal-<%= sol.id %>" class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
              <div class="bg-white rounded-xl shadow-2xl p-6 w-full max-w-md mx-4">
                <h3 class="text-xl font-bold text-blue-700 mb-2">Gestionar Solicitud</h3>
                <hr class="mb-4">
                <div class="space-y-2 text-sm text-gray-600 mb-6">
                  <p><strong>Estudiante:</strong> <%= sol.estudiante_nombre %></p>
                  <p><strong>Materia:</strong> <%= sol.materia %> (<%= sol.seccion %>)</p>
                  <p><strong>Comentario Estudiante:</strong> <%= sol.comentario || 'Sin observaciones' %></p>
                </div>

                <% if (sol.estado === 'Pendiente') { %>
                  <div class="grid grid-cols-2 gap-2">
                    <form>
                      <input type="hidden" name="estado" value="Aprobada">
                      <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 font-bold">Aprobar</button>
                    </form>
                    
                    <button type="button" onclick="toggleModal('modal-<%= sol.id %>', false)" 
                            class="bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300">Cancelar</button>
                  </div>

                  <form class="mt-4 border-t pt-4">
                    <input type="hidden" name="estado" value="Rechazada">
                    <label class="block text-xs font-bold uppercase text-gray-400 mb-1">Motivo del rechazo</label>
                    <textarea name="comentario" class="w-full border p-2 rounded text-sm mb-2" required placeholder="Explique por qué se rechaza..."></textarea>
                    <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 font-bold">Rechazar Solicitud</button>
                  </form>
                <% } else { %>
                   <button type="button" onclick="toggleModal('modal-<%= sol.id %>', false)" 
                            class="w-full bg-blue-600 text-white px-4 py-2 rounded">Cerrar</button>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <h3 class="text-lg font-semibold text-blue-700 mb-4">Inscripciones Confirmadas</h3>
  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2 text-left">Estudiante</th>
          <th class="px-4 py-2">Materia</th>
          <th class="px-4 py-2">Sección</th>
          <th class="px-4 py-2">Fecha Registro</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if (!inscripciones || inscripciones.length === 0) { %>
          <tr><td colspan="5" class="text-center py-6 text-gray-400 italic">No hay registros de inscripciones activas.</td></tr>
        <% } else { %>
          <% inscripciones.forEach(ins => { %>
            <tr class="text-sm">
              <td class="px-4 py-2 text-center text-gray-400 font-mono"><%= ins.id %></td>
              <td class="px-4 py-2"><%= ins.estudiante_nombre %> <br><small class="text-blue-500 font-bold"><%= ins.id_usuario %></small></td>
              <td class="px-4 py-2"><%= ins.materia %></td>
              <td class="px-4 py-2 text-center"><%= ins.seccion %></td>
              <td class="px-4 py-2 text-center text-xs"><%= ins.creado_en %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script src="/js/inscripcion.js" defer></script>