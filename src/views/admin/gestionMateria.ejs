<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6">Gestión de Materias y Secciones</h2>

  <div class="bg-gray-50 p-6 rounded shadow mb-8 border-l-4 border-blue-600">
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Registrar nueva sección</h3>
  <form id="formRegistroSeccion" class="grid grid-cols-1 md:grid-cols-4 gap-4">
    
    <!-- Semestres -->
    <div>
      <div id="todos-semestres">
        <!-- Aquí se cargará el select de semestres -->
      </div>
    </div>
    
    <!-- Materias -->
    <div>
      <div id="materias-semestre">
        <!-- Aquí se cargará el select de materias dinámicamente -->
      </div>
    </div>
    
    <!-- Sección -->
    <div>
      <label for="seccion_nombre" class="block font-semibold text-gray-700">Sección</label>
      <input type="text" id="seccion_nombre" name="seccion_nombre" placeholder="Ej: Sección 3" 
             class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" disabled required>
    </div>
    
    <!-- Cupos -->
    <div>
      <label for="cupos" class="block font-semibold text-gray-700">Cupos</label>
      <input type="number" id="cupos" name="cupos" min="1" placeholder="Ej: 30" 
             class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" disabled required>
    </div>
    
    <!-- Botón -->
    <div class="md:col-span-4">
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors w-full font-bold shadow-md">
        Registrar Sección
      </button>
    </div>
  </form>
</div>

  <h3 class="text-lg font-semibold text-blue-700 mb-4">Secciones registradas</h3>
  <div class="overflow-x-auto mb-10">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-3 text-center">ID</th>
          <th class="px-4 py-3 text-center">Semestre</th>
          <th class="px-4 py-3 text-center">Materia</th>
          <th class="px-4 py-3 text-center">Sección</th>
          <th class="px-4 py-3 text-center">Cupos</th> <th class="px-4 py-3 text-center">Creado por</th>
          <th class="px-4 py-3 text-center">Acciones</th>
        </tr>
      </thead>
      <tbody id="tabla-secciones-body" class="divide-y divide-gray-200 text-center">
          <% if (!secciones || secciones.length === 0) { %>
            <tr>
              <td colspan="7" class="py-6 text-gray-500 italic">No hay secciones registradas actualmente.</td>
            </tr>
          <% } else { %>
            <% secciones.forEach(sec => { %>
              <tr class="hover:bg-gray-50 transition-colors border-b">
                <td class="px-4 py-2 text-gray-600">#<%= sec.id %></td>
                <td class="px-4 py-2 font-medium"><%= sec.semestre %>°</td>
                <td class="px-4 py-2 text-sm"><%= sec.materia_nombre %></td>
                <td class="px-4 py-2">
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm font-bold">
                    <%= sec.seccion_nombre %>
                  </span>
                </td>
                <td class="px-4 py-2">
                  <span class="text-green-700 font-semibold"><%= sec.cupos || 0 %></span>
                </td>
                <td class="px-4 py-2 text-xs">
                  <span class="text-gray-600 font-medium"><%= sec.usuario_nombre %></span>
                </td>
                <td class="px-4 py-2 space-x-2">
                  <button onclick="abrirModalEditarSeccion('<%= sec.id %>', '<%= sec.seccion_nombre %>', '<%= sec.materia_id %>', '<%= sec.cupos %>')" 
                          class="text-yellow-600 hover:text-yellow-700 font-bold text-sm uppercase">Editar</button>
                  <button onclick="confirmarEliminarSeccion('<%= sec.id %>')" 
                          class="text-red-600 hover:text-red-700 font-bold text-sm uppercase">Eliminar</button>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
    </table>
  </div>
</div>

<div id="modal-editar-seccion-container"></div>
<div id="modal-eliminar-seccion-container"></div>

<script src="/js/materias.js"></script>