<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6">Gestión de Materias y Secciones</h2>

  <div class="bg-gray-50 p-6 rounded shadow mb-8 border-l-4 border-blue-600">
    <h3 class="text-lg font-semibold text-blue-700 mb-4">Registrar nueva sección</h3>
    <form id="formRegistroSeccion" class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <label for="semestre" class="block font-semibold text-gray-700">Semestre</label>
        <select id="semestre" name="semestre" class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" required>
          <option value="">Seleccione un semestre</option>
          <% semestres.forEach(sem => { %>
            <option value="<%= sem.semestre %>"><%= sem.semestre %>° Semestre</option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="materia_id" class="block font-semibold text-gray-700">Materia</label>
        <select id="materia_id" name="materia_id" class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" disabled required>
          <option value="">Seleccione una materia</option>
          <% materias.forEach(mat => { %>
            <option value="<%= mat.id %>" data-semestre="<%= mat.semestre %>" hidden>
              <%= mat.nombre %>
            </option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="seccion_nombre" class="block font-semibold text-gray-700">Nombre de la Sección</label>
        <input type="text" id="seccion_nombre" name="seccion_nombre" placeholder="Ej: Sección A" class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" disabled required>
      </div>

      <div class="md:col-span-3">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors w-full font-bold shadow-md">
          Registrar Sección
        </button>
      </div>
    </form>
  </div>

  <h3 class="text-lg font-semibold text-blue-700 mb-4">Secciones registradas</h3>
  <div class="overflow-x-auto mb-10">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-3 text-center">ID</th>
          <th class="px-4 py-3 text-center">Semestre</th>
          <th class="px-4 py-3 text-center">Materia</th>
          <th class="px-4 py-3 text-center">Sección</th>
          <th class="px-4 py-3 text-center">Acciones</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% if (!secciones || secciones.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center py-6 text-gray-500 italic">No hay secciones registradas actualmente.</td>
          </tr>
        <% } else { %>
          <% secciones.forEach(sec => { %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-4 py-2 text-center text-gray-600">#<%= sec.id %></td>
              <td class="px-4 py-2 text-center font-medium"><%= sec.semestre %>°</td>
              <td class="px-4 py-2 text-center"><%= sec.materia %></td>
              <td class="px-4 py-2 text-center"><span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm font-bold"><%= sec.seccion %></span></td>
              <td class="px-4 py-2 text-center space-x-2">
                <button type="button" onclick="toggleModal('<%= sec.id %>', true)" class="text-yellow-600 hover:text-yellow-800 p-1">
                   <span class="font-semibold">Editar</span>
                </button>
                <button type="button" onclick="eliminarSeccion('<%= sec.id %>')" class="text-red-600 hover:text-red-800 p-1">
                   <span class="font-semibold">Eliminar</span>
                </button>
              </td>
            </tr>

            <div id="modal-<%= sec.id %>" class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
              <div class="bg-white rounded-lg shadow-xl p-6 w-96 transform transition-all">
                <h3 class="text-lg font-semibold text-blue-700 mb-4 border-b pb-2">Editar Sección</h3>
                <form onsubmit="editarSeccion(event, '<%= sec.id %>')" class="space-y-4">
                  <div>
                    <label class="block font-semibold text-gray-700 mb-1">Nombre de Sección</label>
                    <input type="text" name="seccion_nombre" value="<%= sec.seccion %>" class="w-full border p-2 rounded focus:ring-2 focus:ring-blue-400 outline-none" required>
                  </div>
                  <div class="flex mt-6 justify-between space-x-3">
                    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 w-full font-bold">Guardar</button>
                    <button type="button" onclick="toggleModal('<%= sec.id %>', false)" class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 w-full">Cancelar</button>
                  </div>
                </form>
              </div>
            </div>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<script src="/js/materias.js"></script>