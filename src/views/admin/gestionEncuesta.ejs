<div class="max-w-6xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6">Gesti√≥n de Encuestas</h2>

  <div class="bg-gray-50 p-6 rounded shadow mb-8">
    <h3 class="text-lg font-semibold text-blue-700 mb-4">Crear nueva encuesta</h3>
    <form id="form-crear-encuesta" class="space-y-4">
      <div>
        <label for="titulo" class="block font-semibold">T√≠tulo</label>
        <input type="text" id="titulo" name="titulo" class="w-full border p-2 rounded" required>
      </div>
      <div>
        <label for="descripcion" class="block font-semibold">Descripci√≥n</label>
        <textarea id="descripcion" name="descripcion" class="w-full border p-2 rounded"></textarea>
      </div>
      <div>
        <label for="semestre" class="block font-semibold">Semestre</label>
        <select id="semestre" name="semestre" class="w-full border p-2 rounded" required>
            <option value="">Cargando semestres...</option>
        </select>
      </div>

      <div id="materias-container" class="mt-4 hidden">
          <label class="block font-semibold">Materias asociadas</label>
          <div id="materias-list" class="space-y-2 flex flex-col">
              </div>
      </div>
      <div class="flex space-x-4">
        <div class="flex-1">
          <label for="fecha_inicio" class="block font-semibold">Fecha de inicio</label>
          <input type="date" id="fecha_inicio" name="fecha_inicio" class="w-full border p-2 rounded" required>
        </div>
        <div class="flex-1">
          <label for="fecha_fin" class="block font-semibold">Fecha de fin</label>
          <input type="date" id="fecha_fin" name="fecha_fin" class="w-full border p-2 rounded" required>
        </div>
      </div>
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition w-full font-bold">
        Crear encuesta
      </button>
    </form>
  </div>

  <h3 class="text-lg font-semibold text-blue-700 mb-4">Encuestas registradas</h3>
  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-200 rounded-lg shadow-sm">
      <thead class="bg-blue-600 text-white">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">T√≠tulo</th>
          <th class="px-4 py-2">Semestre</th>
          <th class="px-4 py-2">Inicio</th>
          <th class="px-4 py-2">Fin</th>
          <th class="px-4 py-2">Estado</th>
          <th class="px-4 py-2">Acciones</th>
        </tr>
      </thead>
     <tbody class="divide-y divide-gray-200">
  <% if (!encuestas || encuestas.length === 0) { %>
    <tr><td colspan="7" class="text-center py-6 text-gray-500">No hay encuestas registradas.</td></tr>
  <% } else { %>
    <% encuestas.forEach(encuesta => { %>
      <tr>
        <td class="px-4 py-2 text-center"><%= encuesta.id %></td>
        <td class="px-4 py-2 text-center font-medium"><%= encuesta.titulo %></td>
        <td class="px-4 py-2 text-center"><%= encuesta.semestre %></td>
        <td class="px-4 py-2 text-center"><%= encuesta.fecha_inicio %></td>
        <td class="px-4 py-2 text-center"><%= encuesta.fecha_fin %></td>
        <td class="px-4 py-2 text-center">
          <span class="px-3 py-1 rounded-full text-xs font-bold <%= encuesta.estado === 'Activa' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
            <%= encuesta.estado %>
          </span>
        </td>
        <td class="px-4 py-2 text-center space-x-1">
          <button onclick="abrirModalEditar('<%= encuesta.id %>')" class="bg-blue-500 text-white px-3 py-1 rounded">Editar</button>
          <button onclick="eliminarEncuesta('<%= encuesta.id %>')" class="bg-red-600 text-white px-3 py-1 rounded">Eliminar</button>
        </td>
      </tr>
    <% }) %> <% } %> </tbody>
</table>

<div id="modal-editar-global" class="hidden fixed inset-0 flex items-center justify-center bg-black/50 z-[9999]">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-md p-6">
        <h2 class="text-xl font-bold mb-4">Editar Encuesta</h2>
        <form id="form-editar-encuesta">
            <input type="hidden" name="id" id="edit-id">
            <div class="space-y-4">
                <input type="text" name="titulo" id="edit-titulo" class="w-full border p-2 rounded" placeholder="T√≠tulo">
                <div id="edit-materias-list" class="border p-2 max-h-40 overflow-y-auto bg-gray-50"></div>
                <div>
                  <div>
                    <label class="block text-sm font-semibold">Semestre</label>
                    <input type="text" id="edit-semestre" name="semestre" class="w-full border p-2 rounded bg-gray-100" readonly>
                  </div>
                  <div class="flex space-x-4">
                    <div class="flex-1">
                        <label for="edit-fecha-inicio" class="block text-sm font-semibold">Fecha de Inicio</label>
                        <input type="date" id="edit-fecha-inicio" name="fecha_inicio" class="w-full border p-2 rounded" required>
                    </div>
                    <div class="flex-1">
                        <label for="edit-fecha-fin" class="block text-sm font-semibold">Fecha de Fin</label>
                        <input type="date" id="edit-fecha-fin" name="fecha_fin" class="w-full border p-2 rounded" required>
                    </div>
                </div>
                <label for="edit-estado" class="block text-sm font-semibold">Estado de la Encuesta</label>
                <select id="edit-estado" name="estado" class="w-full border p-2 rounded bg-white">
                  <option value="Pendiente">Pendiente</option>
                  <option value="Activa">Activa</option>
                  <option value="Finalizada">Finalizada</option>
                </select>
              </div>
            </div>
            
            <div class="flex justify-end gap-2 mt-4">
                <button type="button" onclick="window.cerrarModal('modal-editar-global')" class="px-4 py-2 bg-gray-400 text-white rounded">Cerrar</button>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded font-bold">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div id="modal-resultados" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl overflow-hidden">
        <div class="bg-blue-600 p-4 text-white flex justify-between items-center">
            <h3 class="text-xl font-bold" id="res-titulo">Resultados de la Encuesta</h3>
            <button onclick="cerrarModal('modal-resultados')" class="text-white hover:text-gray-200">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
        </div>
        
        <div class="p-6">
            <h4 class="text-lg font-semibold mb-4 text-gray-700 flex items-center gap-2">
                üèÜ Materias m√°s votadas
            </h4>
            
            <div id="ganadores-container" class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                </div>

            <hr class="my-4">

            <h4 class="text-sm font-bold uppercase text-gray-500 mb-2">Desglose General</h4>
            <div id="lista-detallada-resultados" class="space-y-2 max-h-60 overflow-y-auto">
                </div>
        </div>

        <div class="bg-gray-50 p-4 text-right">
            <button onclick="cerrarModal('modal-resultados')" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 transition">
                Cerrar
            </button>
        </div>
    </div>
</div>

<script src="/js/encuestas.js"></script>